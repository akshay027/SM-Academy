<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <layer-list>
        <item>
            <shape android:shape="rectangle">
                <solid android:color="#44D1D1D1"/>
                <corners android:radius="5dp" />
            </shape>
        </item>
        <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="0dp">
            <shape android:shape="rectangle">
                <solid android:color="#f6d2de"/>
                <corners android:radius="5dp" />
                <gradient android:angle="360"

                    android:endColor="#FFC837"
                    android:startColor="#FF8008" />

            </shape>
        </item>
    </layer-list>
</item>
</selector>