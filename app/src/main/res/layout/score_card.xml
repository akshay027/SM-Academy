<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".Activity.DefaultActivity.PteTestStartActivity">

    <LinearLayout
        android:id="@+id/resultview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/border_am_pm"
        android:gravity="center|top"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_alignParentTop="true"
            android:layout_margin="2dp"
            android:layout_span="2"
            android:background="@color/commoncolor"
            android:elevation="3dp"
            android:gravity="center"
            android:padding="10dp"
            android:text=" Your Score"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:orientation="vertical">
            <TextView
                android:id="@+id/delayView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/meeting_schdule"
                android:padding="5dp"
                android:text=""
                android:textSize="15dp"
                android:textColor="@color/red" />

                <TextView
                    android:id="@+id/timeTakenView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/meeting_schdule"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:visibility="visible"
                    android:textColor="#000"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/totalQuestionView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/meeting_schdule"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text=""
                    android:visibility="visible"
                    android:textColor="#000"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/correctAnswerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/meeting_schdule"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text=""
                    android:visibility="visible"
                    android:textColor="#000"
                    android:textSize="13dp" />



                <TextView
                    android:id="@+id/percentageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/meeting_schdule"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text=""
                    android:visibility="visible"
                    android:textColor="#000"
                    android:textSize="13dp" />





        </LinearLayout>
    </LinearLayout>
</LinearLayout>