<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="@color/white"
    android:elevation="5dp"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/resultview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/SectionName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray"
            android:gravity="center"
            android:padding="10dp"
            android:text=" Your Score"
            android:textColor="@color/commoncolor"
            android:textSize="17dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/meeting_schdule"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="Time Taken :"
                    android:textSize="15dp"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/timeTakeView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/meeting_schdule"
                    android:layout_weight="1"
                    android:padding="5dp"

                    android:textColor="@color/black"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/meeting_schdule"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="Total Question :"
                    android:textSize="15dp"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/totalQuestionView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/meeting_schdule"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/meeting_schdule"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="Answered :"
                    android:textSize="15dp"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/answerView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/meeting_schdule"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/correctLVView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/meeting_schdule"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="Correct Answer :"
                    android:textSize="15dp"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/correctAnswerView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/meeting_schdule"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="@color/green"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/wrongLVView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/meeting_schdule"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="Wrong Answer :"
                    android:textSize="15dp"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/wrongView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/meeting_schdule"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="@color/red"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/scoreLVView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/meeting_schdule"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="Score :"
                    android:textSize="15dp"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/scoreView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/meeting_schdule"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="13dp" />
            </LinearLayout>


            <TextView
                android:id="@+id/delayView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/meeting_schdule"
                android:padding="5dp"
                android:text=""
                android:textSize="15dp"
                android:textColor="@color/red"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>