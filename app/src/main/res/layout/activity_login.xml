                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="bottom|center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/forgetpassView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="2dp"
                            android:text="Forgot your password ?"
                            android:textColor="@color/skyBlue"
                            android:textSize="15dp">

                        </TextView>/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/fb_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:gravity="bottom|center"
                        android:maxHeight="0dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/facebookl" />

                    <ImageView
                        android:id="@+id/youtube_image"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:layout_margin="5dp"
                        android:gravity="bottom|center"
                        android:maxHeight="0dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/youtube1" />

                    <ImageView
                        android:id="@+id/twitter_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:gravity="bottom|center"
                        android:maxHeight="0dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/twitterl" />

                    <ImageView
                        android:id="@+id/in_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:gravity="bottom|center"
                        android:maxHeight="0dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/linkedinl" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/sitelink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="2dp"
