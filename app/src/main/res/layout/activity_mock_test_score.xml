<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/resultview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/border_am_pm"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/delayView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/meeting_schdule"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/red"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/timeTakenView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/meeting_schdule"
                android:layout_weight="1"
                android:padding="5dp"
                android:textColor="#000"
                android:textSize="13dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/totalQuestionView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/meeting_schdule"
                android:layout_weight="1"
                android:padding="5dp"
                android:text=""
                android:textColor="#000"
                android:textSize="13dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/correctAnswerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/meeting_schdule"
                android:layout_weight="1"
                android:padding="5dp"
                android:text=""
                android:textColor="#000"
                android:textSize="13dp"
                android:visibility="visible" />


            <TextView
                android:id="@+id/percentageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/meeting_schdule"
                android:layout_weight="1"
                android:padding="5dp"
                android:text=""
                android:textColor="#000"
                android:textSize="13dp"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnView"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/meeting_schdule"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:padding="5dp"
                android:text="Answer"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:visibility="visible"
        android:weightSum="1">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/mockTestView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_nodata"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:gravity="center"
            android:textSize="15dp"
            android:visibility="gone" />

    </RelativeLayout>
</LinearLayout>